				</approval>
				<jobs>
					<job name="defaultJob">
						<tasks>
							<exec command="ls" />
						</tasks>
					</job>
				</jobs>
			</stage>
		</pipeline>
	</pipelines>
	<agents>
		<agent hostname="missing-agent" ipaddress="10.232.3.1" uuid="missing">
			<resources>
				<resource>missing</resource>
			</resources>
		</agent>
		<agent hostname="denied-agent" ipaddress="10.232.3.2" uuid="denied"
